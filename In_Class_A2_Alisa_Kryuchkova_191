    "from urllib.request import urlopen\n",
    "from tqdm.notebook import trange, tqdm\n",
    "def pg(url):\n",
    "    res = list()\n",
    "    html = urlopen(url).read().decode(\"utf-8\")\n",
    "    index_l = html.find('<ol class=\"row\">') + len('<ol class=\"row\">')\n",
    "    index_r = html.find('</ol>')\n",
    "    ol = html[index_l : index_r]\n",
    "    parse = ol.find('<li class=\"col-xs-6 col-sm-4 col-md-3 col-lg-3\">')\n",
    "    cols = ol[parse : ].split('<li class=\"col-xs-6 col-sm-4 col-md-3 col-lg-3\">')\n",
    "    cols.remove('')\n",
    "    \n",
    "    for i in cols:\n",
    "        books_dictionary = dict()\n",
    "        index_l = i.find(\"alt=\\\"\")+len(\"alt=\\\"\")\n",
    "        index_r = i.find(\"\\\" class=\\\"thumbnail\\\"\")\n",
    "        title = i[index_l : index_r]\n",
    "        index_l = int(i.find(\"<p class=\\\"price_color\\\">Â£\")+len(\"<p class=\\\"price_color\\\">Â£\"))\n",
    "        index_r = int(i.find(\"<p class=\\\"price_color\\\">Â£\")+len(\"<p class=\\\"price_color\\\">Â£\")) + 5\n",
    "        price = i[index_l : index_r]\n",
    "        if(price != '[]'):\n",
    "            books_dictionary['Title'] = title\n",
    "            books_dictionary['Price'] = float(price)\n",
    "            res.append(books_dictionary)\n",
    "    return res\n",
    "\n",
    "dt = list()\n",
    "\n",
    "for i in trange(1,6, desc = 'Download pages'):\n",
    "    pag = pg(\"http://books.toscrape.com/catalogue/page-\" + str(i) + \".html\")\n",
    "    dt = dt + pag\n",
    "df = pd.DataFrame(dt)\n",
    "\n",
    "print(round(df['Price'].mean(), 3), \"Â£\")\n",
    "\n",
    "df"
